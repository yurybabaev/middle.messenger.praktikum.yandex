{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json",  
    "extraFileExtensions": [".scss", ".hbs"]  
  },
  "plugins": [
    "@typescript-eslint"
  ],  
  "rules": {
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off"
  }
}