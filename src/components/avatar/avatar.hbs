<div class="{{modifyclass classes "avatar" classModifier}}">
  <img class="{{classes.avatar__image}}" src={{#if avatarUrl}} "{{avatarUrl}}" {{else}} "{{defaultAvatar}}" {{/if}}
    alt="{{avatarAlt}}">
  <div class="{{classes.avatar__border}}"></div>
  {{#if hasOverlay}}
  <div class="{{classes.avatar__overlay}}">
    <div class="{{classes.avatar__overlayText}}">{{overlayText}}</div>
  </div>
  {{/if}}
</div>