<div class="chat container container__fullHeight">
    <div class="chat__chatsPanel container">
        <a class="chat__profileLink" href="/user/view">
            <span class="chat__profileText">Profile</span>
            <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 9L5 5L1 1" stroke="#999999" />
            </svg>

        </a>
        {{> search}}
        <div class="chat__list">
            {{#each chats}}            
            <hr class="chat__listSeparator">            
            {{> chatItem this}}
            {{/each}}
        </div>
    </div>
    <div class="flyout__placeholder container container__centeredHorizontal container__fullHeight">
    </div>
</div>