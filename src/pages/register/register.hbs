<div class="{{classes.container}} {{classes.container__centered}} {{classes.container__fullHeight}}">
  <div class="{{classes.register}} {{classes.register__container}} {{classes.shadowBox}}">
    <span class="{{classes.register__label}}">Register</span>
    {{#Form onSubmit=onSubmit}}
      {{{ Field caption="Email" type="text" name="email" classModifier="login" required=validationRules.email.required
          validationErrorText=validationRules.email.errorMessage regexp=validationRules.email.regexp }}}
      {{{ Field caption="Login" type="text" name="login" classModifier="login" required=validationRules.login.required
          validationErrorText=validationRules.login.errorMessage regexp=validationRules.login.regexp}}}
      {{{ Field caption="First name" type="text" name="first_name" classModifier="login" required=validationRules.firstName.required
          validationErrorText=validationRules.firstName.errorMessage regexp=validationRules.firstName.regexp}}}
      {{{ Field caption="Second name" type="text" name="second_name" classModifier="login" required=validationRules.secondName.required
          validationErrorText=validationRules.secondName.errorMessage regexp=validationRules.secondName.regexp}}}
      {{{ Field caption="Phone" type="text" name="phone" classModifier="login" required=validationRules.phone.required
          validationErrorText=validationRules.phone.errorMessage regexp=validationRules.phone.regexp}}}
      {{{ Field caption="Password" type="password" name="password" classModifier="login" required=validationRules.password.required
          validationErrorText=validationRules.password.errorMessage regexp=validationRules.password.regexp}}}
      {{{ Field caption="Repeat password" type="password" name="password_repeat" classModifier="login" required=validationRules.password.required
          validationErrorText=validationRules.password.errorMessage regexp=validationRules.password.regexp}}}
      <div class="{{classes.register__buttonContainer}}">      
        {{{Button caption="Register" classModifier="primary" submit="true"}}}
      </div>
    {{/Form}}
    <div class="{{classes.register__linkContainer}}">      
      {{{ Link caption="Sign in" url="/login"}}}
    </div>    
  </div>
</div>