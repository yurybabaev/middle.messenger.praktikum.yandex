{{#Flyout returnUrl="/chat"}}
<div class="{{classes.userView}} {{classes.userView__container}}">
    {{{Avatar avatarAlt="User avatar" classModifier="user"}}}
    <span class="{{classes.userView__userLabel}}">Иван</span>
    {{#Form}}
    {{{Field caption="Email" type="email" value="test@email.com" name="email" readOnly="true" classModifier="user"}}}
    <hr class="{{classes.userView__fieldSeparator}}">
    {{{Field caption="Login" type="text" value="ivan" readOnly="true" name="login" classModifier="user"}}}
    <hr class="{{classes.userView__fieldSeparator}}">
    {{{Field caption="First name" type="text" value="Ivan" readOnly="true" name="first_name" classModifier="user"}}}
    <hr class="{{classes.userView__fieldSeparator}}">
    {{{Field caption="Second name" type="text" value="Ivanov" readOnly="true" name="second_name" classModifier="user"}}}
    <hr class="{{classes.userView__fieldSeparator}}">
    {{{Field caption="Nickname" type="text" value="stardestroyer5000" readOnly="true" name="nick" classModifier="user"}}}
    <hr class="{{classes.userView__fieldSeparator}}">
    {{{Field caption="Phone" type="text" value="+71112223344" readOnly="true" name="phone" classModifier="user"}}}
    {{/Form}}
    <div class="{{classes.userView__linkContainer}}">
        {{{Link caption="Change properties" url="/user/edit"}}}
        <hr class="{{classes.userView__fieldSeparator}}">
        {{{Link caption="Change password" url="/user/changePassword"}}}
        <hr class="{{classes.userView__fieldSeparator}}">
        {{{Link caption="Logout" url="/" classModifier="danger"}}}       
    </div>

</div>

{{/Flyout}}